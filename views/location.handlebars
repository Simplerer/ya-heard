<section class="container-fluid content">
  
  <section class="row justify-content-md-center locations">
  <h1 id="prompt">Check out small business recommendations in:</h1>
  
{{#each locations as |location|}}
<div class="col pt-4 text-center">
<a id="citylink" href="/location/{{location_name}}">
<header id="cityname">{{full_name}}</header>
<img id="cityimg" src="/images/{{lookup ../imageList @key}}">
</a>  
</div>
{{/each}}
  </section>
  <div class="row justify-content-md-center messagebtn">
    <div class="col col-4 text-center align-self-center">
    <article>
      Dont See your city? Fill out our <a id="formlink" href="/add">request form</a> to have it added!
    </article>
  </div>
  </div>
</section>
